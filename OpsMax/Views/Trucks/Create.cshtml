@model OpsMax.Models.Truck

@{
    ViewData["Title"] = "Create Truck";
}

<h2>Create Truck</h2>

<form asp-action="Create" method="post">
    <div class="form-group mb-3">
        <label asp-for="RegistrationNumber" class="form-label"></label>
        <input asp-for="RegistrationNumber" class="form-control" />
        <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="CapacityTonnes" class="form-label"></label>
        <input asp-for="CapacityTonnes" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Owner" class="form-label"></label>
        <input asp-for="Owner" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Status" class="form-label"></label>
        <select asp-for="Status" class="form-control">
            <option>Active</option>
            <option>Inactive</option>
            <option>Maintenance</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
