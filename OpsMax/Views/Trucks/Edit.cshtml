@model OpsMax.Models.Truck

@{
    ViewData["Title"] = "Edit Truck";
}

<h2>Edit Truck</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="idTruck" />

    <div class="form-group mb-3">
        <label asp-for="RegistrationNumber"></label>
        <input asp-for="RegistrationNumber" class="form-control" />
        <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="CapacityTonnes"></label>
        <input asp-for="CapacityTonnes" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Owner"></label>
        <input asp-for="Owner" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Status"></label>
        <select asp-for="Status" class="form-control">
            <option>Active</option>
            <option>Inactive</option>
            <option>Maintenance</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
