@model OpsMax.Models.Truck

@{
    ViewData["Title"] = "Truck Details";
}

<h2>Truck Details</h2>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Registration</dt>
            <dd class="col-sm-9">@Model.RegistrationNumber</dd>

            <dt class="col-sm-3">Capacity</dt>
            <dd class="col-sm-9">@Model.CapacityTonnes Tonnes</dd>

            <dt class="col-sm-3">Owner</dt>
            <dd class="col-sm-9">@Model.Owner</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@Model.Status</dd>

            <dt class="col-sm-3">Created Date</dt>
            <dd class="col-sm-9">@Model.CreatedDate.ToString("yyyy-MM-dd")</dd>
        </dl>
    </div>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.idTruck" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</p>
