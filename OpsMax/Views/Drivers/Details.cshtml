@model OpsMax.Models.Driver

<h2>Driver Details</h2>

<div class="card p-3 mb-3">
    <h5>Driver Information</h5>

    <p><strong>Name:</strong> @Model.FullName</p>
    <p><strong>National ID:</strong> @Model.NationalID</p>
    <p><strong>Phone:</strong> @Model.Phone</p>
    <p><strong>License Number:</strong> @Model.LicenseNumber</p>
    <p><strong>License Expiry:</strong> @Model.LicenseExpiry.ToShortDateString()</p>
    <p>
        <strong>Status:</strong>
        @if (Model.LicenseExpiry < DateTime.Now)
        {
            <span class="text-danger">License Expired</span>
        }
        else
        {
            @Model.Status
        }
    </p>
</div>

<div class="card p-3">
    <h5>Assigned Loads</h5>

    <table class="table">
        <thead>
            <tr>
                <th>Load Date</th>
                <th>Truck</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var load in Model.Loads ?? new List<OpsMax.Models.Load>())
            {
                <tr>
                    <td>@load.LoadDate.ToShortDateString()</td>
                    <td>@load.Truck?.RegistrationNumber</td>
                    <td>@load.Status</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<a asp-action="Index" class="btn btn-secondary mt-3">Back</a>
