@model OpsMax.Models.Driver

<h2>Edit Driver</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="idDriver" />

    <!-- Same fields as Create -->

    <div class="row">

        <div class="col-md-6 mb-3">
            <label asp-for="FullName"></label>
            <input asp-for="FullName" class="form-control" />
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="NationalID"></label>
            <input asp-for="NationalID" class="form-control" />
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Phone"></label>
            <input asp-for="Phone" class="form-control" />
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="LicenseNumber"></label>
            <input asp-for="LicenseNumber" class="form-control" />
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="LicenseExpiry"></label>
            <input asp-for="LicenseExpiry" type="date" class="form-control" />
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Status"></label>
            <select asp-for="Status" class="form-select">
                <option>Active</option>
                <option>Inactive</option>
            </select>
        </div>

    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
