@model List<PaymentSource>

<h3>Payment Sources Vault</h3>

<table class="table table-striped table-sm">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Type</th>
            <th>Account</th>
            <th>Order Ref</th>
            <th>Raised By</th>
            <th>Date</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Id</td>
                <td>@s.SourceType</td>
                <td>@s.AccountId</td>
                <td>@s.OrderReference</td>
                <td>@s.RaisedBy</td>
                <td>@s.DateCaptured.ToShortDateString()</td>
                <td><span class="badge bg-warning">@s.Status</span></td>
                <td>
                    <a class="btn btn-sm btn-primary"
                       href="/paymentsource/details/@s.Id">
                        Open
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
