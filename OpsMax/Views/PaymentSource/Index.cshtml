@model List<PaymentSource>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>Payment Sources Vault</h3>
    <a href="/paymentsource/create" class="btn btn-success">
        + New Payment Source
    </a>
</div>

<table class="table table-striped table-sm">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Type</th>
            <th>AccountID</th>
            <th>Account</th>
            <th>AccountName</th>
            <th>Order Ref</th>
            <th>Raised By</th>
            <th>Date</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.idPaymentSource</td>
                <td>@s.SourceType</td>
                <td>@s.AccountID</td>
                <td>@s.Account</td>
                <td>@s.AccountName</td>
                <td>@s.OrderReference</td>
                <td>@s.RaisedBy</td>
                <td>@s.DateCaptured.ToShortDateString()</td>
                <td><span class="badge bg-warning">@s.Status</span></td>
                <td>
                    <a class="btn btn-sm btn-primary"
                       href="/paymentsource/details/@s.idPaymentSource">
                        Open
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
