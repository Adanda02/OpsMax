@model BOLMS.Models.OrderStatus

@{
    ViewData["Title"] = "Create Order Status";
}

<h2>Create Order Status</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group mb-3">
        <label asp-for="StatusCode" class="form-label"></label>
        <input asp-for="StatusCode" class="form-control" />
        <span asp-validation-for="StatusCode" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="StatusDescription" class="form-label"></label>
        <input asp-for="StatusDescription" class="form-control" />
        <span asp-validation-for="StatusDescription" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
