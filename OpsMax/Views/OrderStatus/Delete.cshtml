@model BOLMS.Models.OrderStatus

@{
    ViewData["Title"] = "Delete Order Status";
}

<h2>Delete Order Status</h2>

<p>Are you sure you want to delete this?</p>

<div class="mb-2">
    <strong>Status Code:</strong> @Model.StatusCode
</div>

<div class="mb-3">
    <strong>Description:</strong> @Model.StatusDescription
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="idStatus" />

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Back</a>
</form>
