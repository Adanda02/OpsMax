@model OpsMax.ViewModels.LoadCreateViewModel

@{
    ViewData["Title"] = "Create Load";
}

<div class="container mt-4">
    <h2>Create Load</h2>

    <form asp-action="Create" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>

        <!-- Supplier -->
        <div class="mb-3">
            <label class="form-label">Supplier</label>
            <select asp-for="Load.DCLink"
                    asp-items="Model.Vendors"
                    class="form-select">
                <option value="">-- Select Supplier --</option>
            </select>
        </div>

        <!-- Stock Item -->
        <div class="mb-3">
            <label class="form-label">Stock Item</label>
            <select asp-for="Load.StockLink"
                    asp-items="Model.StockItems"
                    class="form-select">
                <option value="">-- Select Stock Item --</option>
            </select>
        </div>

        <!-- Truck -->
        <div class="mb-3">
            <label class="form-label">Truck</label>
            <select asp-for="Load.idTruck"
                    asp-items="Model.Trucks"
                    class="form-select">
                <option value="">-- Select Truck --</option>
            </select>
        </div>

        <!-- Driver -->
        <div class="mb-3">
            <label class="form-label">Driver</label>
            <select asp-for="Load.idDriver"
                    asp-items="Model.Drivers"
                    class="form-select">
                <option value="">-- Select Driver --</option>
            </select>
        </div>

        <!-- Quantity -->
        <div class="mb-3">
            <label class="form-label">Loaded Quantity</label>
            <input asp-for="Load.LoadedQuantity"
                   class="form-control" />
        </div>

        <!-- Load Date -->
        <div class="mb-3">
            <label class="form-label">Load Date</label>
            <input asp-for="Load.LoadDate"
                   type="date"
                   class="form-control" />
        </div>

        <!-- Estimated Arrival -->
        <div class="mb-3">
            <label class="form-label">Estimated Arrival</label>
            <input asp-for="Load.EstimatedArrivalDate"
                   type="date"
                   class="form-control" />
        </div>

        <button type="submit" class="btn btn-success">
            Save Load
        </button>

        <a asp-action="Index" class="btn btn-secondary">
            Cancel
        </a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
