@model OpsMax.ViewModels.LoadViewModel

<h2>Create Load</h2>

<form asp-action="Create">

    <div class="form-group">
        <label>Supplier</label>
        <select asp-for="DCLink" asp-items="Model.Suppliers" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Stock</label>
        <select asp-for="StockLink" asp-items="Model.Stocks" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Truck</label>
        <select asp-for="idTruck" asp-items="Model.Trucks" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Driver</label>
        <select asp-for="idDriver" asp-items="Model.Drivers" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Quantity Loaded (Tonnes)</label>
        <input asp-for="LoadedQuantity" class="form-control" />
    </div>

    <div class="form-group">
        <label>Load Date</label>
        <input asp-for="LoadDate" type="datetime-local" class="form-control" />
    </div>

    <div class="form-group">
        <label>Estimated Arrival</label>
        <input asp-for="EstimatedArrivalDate" type="datetime-local" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>

</form>
