<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OpsMax</title>

    <!-- Theme & Styles -->
    <link rel="stylesheet" href="~/css/BootsWatchTheme.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BOLMS.styles.css" asp-append-version="true" />

    <!-- Icons & Toastr -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">

                <!-- Brand -->
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">OpsMax</a>

                <!-- Hamburger button for mobile -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar links & search -->
                <div class="collapse navbar-collapse" id="navbarColor01">

                    <!-- LEFT MENU ITEMS -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <!-- Home -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <!-- Category -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Category" asp-action="Index">Category</a>
                        </li>

                        <!-- COLLECTION DROPDOWN -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="collectionDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Collection
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="collectionDropdown">
                                <li><a class="dropdown-item" asp-controller="Collection" asp-action="Summary"><i class="bi bi-list-ul"></i> View Invoices Collected</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="Collection" asp-action="Index"><i class="bi bi-list-ul"></i> View Collections</a></li>
                                <li><a class="dropdown-item" asp-controller="Collection" asp-action="Search"><i class="bi bi-search"></i> Search</a></li>
                            </ul>
                        </li>

                        <!-- Order Status -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="OrderStatus" asp-action="Index">Order Status</a>
                        </li>

                        <!-- PAYMENTS DROPDOWN -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="paymentsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Payments
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="paymentsDropdown">
                                <li><a class="dropdown-item" asp-controller="PaymentSource" asp-action="Index"><i class="bi bi-folder2-open"></i> Payment Sources</a></li>
                                <li><a class="dropdown-item" asp-controller="PaymentProcessing" asp-action="Index"><i class="bi bi-cash-coin"></i> Payment Processing</a></li>
                            </ul>
                        </li>

                    </ul>

                    <!-- RIGHT-ALIGNED GLOBAL SEARCH -->
                    <form class="d-flex ms-auto" asp-controller="Collection" asp-action="Search" method="get">
                        <input class="form-control me-2" type="search" name="query" placeholder="Search collections..." />
                        <button class="btn btn-secondary" type="submit">Search</button>
                    </form>

                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            <partial name="_Notifications" />
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - OpsMax - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
