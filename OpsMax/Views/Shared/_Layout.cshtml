<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BOLMS</title>

    <!-- Theme & Styles -->
    <link rel="stylesheet" href="~/css/BootsWatchTheme.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BOLMS.styles.css" asp-append-version="true" />

    <!-- Icons & Toastr -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">

                <a class="navbar-brand" asp-controller="Home" asp-action="Index">OpsMax</a>

                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarColor01"
                        aria-controls="navbarColor01"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">

                        <!-- Home -->
                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="Home"
                               asp-action="Index">
                                Home
                            </a>
                        </li>

                        <!-- Category -->
                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="Category"
                               asp-action="Index">
                                Category
                            </a>
                        </li>

                        <!-- COLLECTION DROPDOWN -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle"
                               href="#"
                               id="collectionDropdown"
                               role="button"
                               data-bs-toggle="dropdown"
                               aria-expanded="false">
                                Collection
                            </a>

                            <ul class="dropdown-menu" aria-labelledby="collectionDropdown">

                                <!-- View Invoices Collected -->
                                <li>
                                    <a class="dropdown-item"
                                       asp-controller="Collection"
                                       asp-action="Summary">
                                        <i class="bi bi-list-ul"></i> View Invoices Collected
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>

                                <!-- View Collections -->
                                <li>
                                    <a class="dropdown-item"
                                       asp-controller="Collection"
                                       asp-action="Index">
                                        <i class="bi bi-list-ul"></i> View Collections
                                    </a>
                                </li>

                                <!-- Search Collections -->
                                <li>
                                    <a class="dropdown-item"
                                       asp-controller="Collection"
                                       asp-action="Search">
                                        <i class="bi bi-search"></i> Search
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <!-- Order Status -->
                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="OrderStatus"
                               asp-action="Index">
                                Order Status
                            </a>
                        </li>

                        <!-- Payments -->
                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="OrderStatus"
                               asp-action="Index">
                                Payments
                            </a>
                        </li>
                    </ul>

                    <!-- Global Search (Optional) -->
                    <form class="d-flex" asp-controller="Collection" asp-action="Search" method="get">
                        <input class="form-control me-sm-2"
                               type="search"
                               name="query"
                               placeholder="Search collections..." />
                        <button class="btn btn-secondary" type="submit">
                            Search
                        </button>
                    </form>

                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            <partial name="_Notifications" />
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - BOLMS -
            <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
